<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="/css/addDocuments.css">
<link rel="stylesheet" href="/css/sesion.css">

<div class="bodySesion">
    <div class="containerDocuments ">
        <div class="text-center">
            <h2>Cargar Documentos para ser Premium</h2>
            <p>Usuario: {{usuario.email}}</p>
        </div>
        <form id='addDocumentForm' enctype="multipart/form-data">
            <div class="form-group">
                <label for="fotoPerfil">Imagen de perfil</label>
                <input type="file" class="form-control" name="fotoPerfil" id="fotoPerfil" accept=".pdf,.jpg,.jpeg">
                <small class="form-text text-muted file-description">Sube un archivo PDF, jpeg, jpg</small>
            </div>
            <div class="form-group">
                <label for="dniFrente">DNI frente</label>
                <input type="file" class="form-control" name="dniFrente" id="dniFrente" accept=".pdf,.jpg,.jpeg">
                <small class="form-text text-muted file-description">Sube un archivo PDF, jpeg, jpg</small>
            </div>
            <div class="form-group">
                <label for="dniDorso">DNI dorso</label>
                <input type="file" class="form-control" name="dniDorso" id="dniDorso" accept=".pdf,.jpg,.jpeg">
                <small class="form-text text-muted file-description">Sube un archivo PDF, jpeg, jpg</small>
            </div>
            <button type="submit" id="uploadButton" class="btn btn-primary" disabled>Cargar Archivos</button>
        </form>
        <div class="text-center mt-4 d-flex justify-content-around">
            <button id="premiumButton" class="btn btn-success text-light">
                Siguiente
            </button>
            <div class="">
                <a href="/products" class="btn btn-secondary">Volver a Productos</a>
            </div>
        </div>
    </div>
</div>

<script src="/js/uploadDocuments.js"></script>
<script src="/js/userPremium.js"></script>