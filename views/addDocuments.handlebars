<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<div class="text-light text-center">
    <div>
        <p>Cargar Archivos para ser Premium</p>
        <p>usuario: {{userId}}</p>
    </div>
    <form action="/api/users/{{userId}}/documents" method="POST" id='upload-form' enctype="multipart/form-data">
        <div class="d-flex justify-content-between m-3">
            <label for="fotoPerfil">Imagen de perfil</label>
            <input type="file" name="fotoPerfil" id="fotoPerfil" accept=".pdf,.jpg, .jpeg"
                onchange="fileSelected(this)">
            <span class="file-description">Sube un archivo PDF, jpeg, jpg</span>
        </div>
        <div class="d-flex justify-content-between m-3">
            <label for="dniFrente">Dni frente</label>
            <input type="file" name="dniFrente" id="dniFrente" accept=".pdf,.jpg, .jpeg" onchange="fileSelected(this)">
            <span class="file-description">Sube un archivo PDF, jpeg, jpg</span>
        </div>
        <div class="d-flex justify-content-between m-3">
            <label for="dniDorso">Dni dorso</label>
            <input type="file" name="dniDorso" id="dniDorso" accept=".pdf, .doc, .docx, .txt, .jpg, .jpeg"
                onchange="fileSelected(this)">
            <span class="file-description">Sube un archivo PDF, jpeg, jpg</span>
        </div>
        <div class="mt-5">
            <input type="submit" value="Cargar Archivos" id="uploadButton" disabled>
        </div>
    </form>
    <div>
        <button id="premiumButton" class="btn btn-secondary border border-solid border-dark" style="display: none;">
            <strong class="text-light">Siguiente</strong>
        </button>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 mt-3">
        <div class=""><a href="/products" class="btn btn-success btn-block btn-lg">Volver a Productos</a>
        </div>
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/uploadDocuments.js"></script>
<script src="/js/userPremium.js"></script>