<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="../css/login.css">
<link rel="stylesheet" href="../css/product.css">

<div class="d-flex justify-content-between text-light">
    <div>
        <span class="ms-2"><span class="fw-bold text-uppercase fs-5 ">{{usuario.name}} </span> <span
                class=" ">({{usuario.age}})</span></span>
    </div>
    {{#if usuario.premium}}
    <p class="mr-2 fw-semibold text-capitalize text-light" [ user ⭐ PREMIUM ⭐]></p>
    {{else}}
    <p class="mr-2 fw-semibold text-capitalize text-light" [ user ]></p>
    {{/if}}
    <div>
        <a href="/carts/{{usuario.cart}}" class="btn btn-warning border border-solid border-dark">🛒</a>
        <a href="/sessions/logout" class="btn btn-danger">LogOut</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            {{#if usuario.premium}}
            <h2 class="text-light">Eres usuario ⭐ Premium ⭐, Felicitaciones!</h2>
            {{else}}
            <h2 class="text-light">Dejaste de ser Premium!😢</h2>
            {{/if}}
            <hr class="colorgraph">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 mt-3">
                <div class=""><a href="/products" class="btn btn-success btn-block btn-lg">Volver a Productos</a>
                </div>
            </div>
        </div>
    </div>
</div>