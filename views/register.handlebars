<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="../css/register.css">

<div class="container">

    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <h2 class="text-light">Sign Up</h2>
            <hr class="colorgraph">
            <form id="registerForm">
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input required type="text" name="firtName" id="firtName" class="form-control input-lg"
                                placeholder="First Name" tabindex="1">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input required type="text" name="lastName" id="lastName" class="form-control input-lg"
                                placeholder="Last Name" tabindex="2">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input required type="email" name="email" id="email" class="form-control input-lg"
                        placeholder="Email Address" tabindex="3">
                </div>
                <div class="form-group">
                    <input required type="number" name="age" id="age" class="form-control input-lg" placeholder="Age"
                        tabindex="4">
                </div>
                <div class="form-group">
                    <input required type="password" name="password" id="password" class="form-control input-lg"
                        placeholder="Password" tabindex="5">
                </div>
        </div>
        <hr class="colorgraph">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 ">
            <button type="submit" class="btn btn-success btn-block btn-lg ">Register</button>
        </div>
        </form>

        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 ">
            <div class="mt-5"><a href="/sessions/login" class="btn btn-primary btn-block btn-lg">Sign In</a></div>
        </div>

    </div>
</div>
<script src="/js/register.js"></script>